  <section class="kb-section">
    <h1 class="kb-section-header">{{postslistHeader}}</h1>
    {% for post in postslist | reverse %}
    <div class="kb-section-entry-container">
    {{postslistCounter}} {{postlist.length}}
      <div class="kb-section-entry{% if postslistCounter == postslist.length %} primary{% endif %}">
        <h2 class="kb-section-entry-title">{{ post.data.title }}</h2>
      </div>
    </div>
  <li class="postlist-item{% if post.url == url %} postlist-item-active{% endif %}">
    <a href="{{ post.url | url }}" class="postlist-link">{% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</a>
    <time class="postlist-date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time>
    {% for tag in post.data.tags %}
      {%- if collections.tagList.indexOf(tag) != -1 -%}
      {% set tagUrl %}/tags/{{ tag }}/{% endset %}
      <a href="{{ tagUrl | url }}" class="tag">{{ tag }}</a>
      {%- endif -%}
    {% endfor %}
  </li>
    {% endfor %}
  </section>
