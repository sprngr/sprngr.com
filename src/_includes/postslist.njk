  <section class="kb-section">
    <h1 class="kb-section-header">{{postslistHeader}}</h1>
    <div class="kb-section-entry-container">
    {% for post in postslist | reverse %}
      <div class="kb-section-entry{% if collections.posts.indexOf(post) == postsPrimary %} primary{% endif %}">
        <a href="{{ post.url | url }}"><h2 class="kb-section-entry-title">{% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</h2></a>
          <p><time class="postlist-date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time></p>
          <p>{{ post.data.description }}</p>
          <p>
          {% for tag in post.data.tags %}
            {%- if collections.tagList.indexOf(tag) != -1 -%}
            {% set tagUrl %}/tags/{{ tag }}/{% endset %}
            <a href="{{ tagUrl | url }}" class="tag">{{ tag }}</a>
            {%- endif -%}
          {% endfor %}
          </p>
      </div>
    {% endfor %}
    </div>
  </section>
