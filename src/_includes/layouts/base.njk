<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ renderData.title or title or metadata.title }} | Michael Springer</title>
    <meta name="description" content="{{ renderData.description or description or metadata.description }}">
    <meta name="keywords" content="{{ renderData.keywords or keywords or metadata.keywords }}">
    <meta name="robots" content="index, follow">
    <meta name="theme-color" content="#0bbdfc">
    <link rel="shortcut icon" href="/img/assets/favicon.png">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    {% set css %}
      {% include "css/style.njk" %}
    {% endset %}
    <style type="text/css">
      {{ css | cssmin | safe }}
    </style>
  </head>
  <body>
    <div class="kb-container">
      <nav class="kb-nav">
      {%- for entry in collections.all | eleventyNavigation %}
        <a class="kb-nav-item{% if entry.url == page.url %} kb-nav-item-active{% endif %}" href="{{ entry.url | url }}">{{ entry.title }}</a>
      {%- endfor %}
      </nav>
      <header class="kb-header">
        <div class="kb-header-wrapper">
          {% include "snippets/logo.njk" %}
        </div>
      </header>
      <main{% if templateClass %} class="{{ templateClass }}"{% endif %}>
      {{ content | safe }}
    </main>
    </div>
    <footer class="kb-footer">
      <nav class="kb-nav">
        <a href="https://sprngr.com/links">Hyperlinks for the rest of the web</a>
      </nav>
    </footer>

    <!-- Current page: {{ page.url | url }} -->
  </body>
</html>
