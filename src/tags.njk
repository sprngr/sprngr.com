---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - nav
    - tagList
  addAllPagesToCollections: true
layout: layouts/home.njk
renderData:
  title: Tagged “{{ tag }}”
permalink: /tags/{{ tag }}/
---
<h1>Tagged “{{ tag }}”</h1>

{% set collectionTag = tag %}
{% set entryCollection = collections[collectionTag] %}
{% set entrylist = entryCollection | head(-4) %}
{% set entrylistHeader = tag %}
{% set entryPrimary = entrylist.length %}
{% include "snippets/entrylist.njk" %}

<p>See <a href="{{ '/tags/' | url }}">all tags</a>.</p>
